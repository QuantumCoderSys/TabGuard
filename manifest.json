{
  "manifest_version": 3,
  "name": "PassWordLock",
  "version": "0.1.0",
  "description": "Lock specified sites behind a password.",
  "permissions": ["storage", "tabs", "webNavigation", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options/options.html",
  "action": {
    "default_title": "PassWordLock",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["shared.js", "content_script.js"],
      "run_at": "document_start"
    }
  ],
  "commands": {
    "lock-current-site": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Lock the current site"
    }
  }
}
